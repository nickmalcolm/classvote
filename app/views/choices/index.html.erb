<h1>CHI2011 Sessions</h1>

<% @choices.each do |choice| %>
  <%= div_for choice do %>
    <table>
      <tr>
        <td class="votes">
          <h2 class="vote_button">
            <% if can_vote_on choice %>
              <%= link_to raw('&#x25B2;'), vote_choice_url(choice), :id => "vote_#{choice.id}", :title => "Vote for #{choice.title}" %>
              <h2 class="vote_count"><%= link_to choice.votes.count, vote_choice_url(choice), :title => "Vote for #{choice.title}" %></h2>
            <% else %>
              &#x25B2;
              <h2 class="vote_count"><%= choice.votes.count %></h2>
            <% end %>
          </td>
        <td><h1><%= choice.title %></h1></td>
      </tr>
    </table>
    <p><%= choice.description %></p>
    <p><%= choice.url %></p>
    <p>
      <%= link_to 'Details', choice_path(choice) %>
    </p>
  <% end %>
<% end %>
<br />

<%= link_to 'New Choice', new_choice_path %>
