<!DOCTYPE html>
<html>
<head>
  <title>Classvote</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if flash[:error] %>
  <p style="font-weight: bold; color:#A00"><%= flash[:error] %></p>
<% end %>
<% if flash[:notice] %>
  <p style="font-weight: bold; color:#0A0"><%= flash[:notice] %></p>
<% end %>

<%= render "sessions/login" %>

<%= yield %>

</body>
</html>
