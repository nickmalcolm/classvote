<!DOCTYPE html>
<html>
<head>
  <title>Classvote</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, "jquery-1.6.1.min" %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="header">
  <h1><%= link_to "CHI 2011 Session Chooser", root_url %></h1>
</div>

<section>
  <% if flash[:error] %>
    <p style="font-weight: bold; color:#A00"><%= flash[:error] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p style="font-weight: bold; color:#0A0"><%= flash[:notice] %></p>
  <% end %>
</section>

<section>
  <%= render "sessions/login" %> 
</section>

<section>
  <%= yield %>
</section>

<script>
$(document).ready(
  function(){
    <%= content_for(:jquery) %>
  });
</script>

</body>
</html>
